div.loading {
	z-index: @primaryLayer + 2;
	position: absolute;
	.display(flex);
	.align-items(center);
	.justify-content(center);
	width: 100%;
	height: 100%;
	background-color: rgba(
		red(@sliderPrimaryColour),
		green(@sliderPrimaryColour),
		blue(@sliderPrimaryColour),
		0.05
	);

	i {
		.flex(1);
		font-size: @largeFont * 2;
		color: rgba(
			red(@sliderPrimaryColour),
			green(@sliderPrimaryColour),
			blue(@sliderPrimaryColour),
			0.5
		);
		width: @gridColumnWidth * 4;
		text-align: center;
		.animation(progress @transitionDuration * 3 linear infinite);

	}

	div.svgContainer {

		.display(flex);
		width: @gridColumnWidth * 16;
		height: @gridColumnWidth * 16;

		img {
			position: absolute;
			&:last-child {
				.animation(progress @transitionDuration * 15 linear infinite);
			}
		}
	}
}