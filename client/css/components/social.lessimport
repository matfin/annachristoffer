.social {

	padding-top: @gridColumnWidth * 1.25;

	button {

		margin: 0px auto;
		width: 0%;
		height: @gridColumnWidth * 1.25;
		line-height: @gridColumnWidth * 1.25;
		overflow-x: hidden;
		color: black;

		.resetButton;
		.box-sizing(border-box);
		.transition-property(width);
		.transition-duration(@transitionDuration);

		&:hover {
			color: @sliderPrimaryColour;
		}
		&:first-child {
			width: 25%;
		}
	}

}