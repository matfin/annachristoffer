.slider {
	.display(flex);
	.flex-direction(row);
	.align-items(flex-start);
	position: relative;
	pointer-events: none;

	.transform(translate3d(0px, 0px, 0px));
	.transform-style(preserve-3d);
	.backface-visibility(hidden);
}

.debug {
	z-index: 100;
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
	height: 40px;
	padding: 20px;
	text-align: center;
	background-color: #000;
	color: #fff;
}



