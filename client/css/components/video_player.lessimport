.timeline {
	position: absolute;
	bottom: @gridColumnWidth * 1.5;
	width: 100%;
	height: @gridColumnWidth * 0.75;
	text-align: center;
	.hexToRGBA(@sliderPrimaryColour, 0.4);

	#videoProgress {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: @gridColumnWidth * 0.75;
	}

