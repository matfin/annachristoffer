input[type="range"] {
    -webkit-appearance: none;
    -webkit-tap-highlight-color: rgba(255, 255, 255, 0);
    width: 100%;
    height: @gridColumnWidth * 0.75;
    margin: 0;
    border: none;
    background-color: @videoControlsColour;
    outline: none;
    .resetMarginPadding;

    &::-moz-range-track {
        border: inherit;
        background: transparent;
    }

    &::-ms-track {
        border: inherit;
        color: transparent;
        background: transparent;
    }

    &::-ms-fill-lower,
    &::-ms-fill-upper {
        background: transparent;
    }

    &::-ms-tooltip {
        display: none;
    }

    &::-webkit-slider-thumb {
        -webkit-appearance: none;
        width: @gridColumnWidth;
        height: @gridColumnWidth * 0.75;
        border: none;
        border-radius: @gridColumnWidth / 2;
        background-color: black;
    }

    &::-moz-range-thumb {
        width: @gridColumnWidth;
        height: @gridColumnWidth * 0.75;
        border: none;
        border-radius: @gridColumnWidth / 2;
        background-image: linear-gradient(to bottom, @colourBlack 0, @colourBlack 100%);
    }

    &::-ms-thumb {
        width: @gridColumnWidth;
        height: @gridColumnWidth * 0.75;
        border-radius: @gridColumnWidth / 2;
        border: 0;
        background-image: linear-gradient(to bottom, @colourBlack 0, @colourBlack 100%);
    }
}