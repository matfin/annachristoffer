div.view-loading {
	.display(flex);
	.align-items(center);
	.justify-content(center);
	width: 100%;
	height: 100%;

	background-color: rgba(
		red(#feecfb),
		green(#feecfb),
		blue(#feecfb),
		0.96
	);

	i {
		.flex(1);
		font-size: @largeFont * 2;
		color: @sliderPrimaryColour;
		width: @gridColumnWidth * 4;
		text-align: center;
		.animation(progress @transitionDuration * 3 linear infinite);
	}
}