body.list {
	.wrapper {
		.container {	
			.header {
				padding-top: @gridColumnWidth * 4;
			}
			.content {
				padding-top: @gridColumnWidth * 4;

				&.mobile {
					padding-top: @gridColumnWidth * 3;
				}

				section {
					@media @mobile {
						padding-top: 0px;
					}
				}
			}
		}
	}
}

ul.projectGroup {
	display: inline;
	float: left;

	li {
		display: block;
		width: 100%;
		float: left;
		.box-sizing(border-box);
		padding: @gridColumnWidth / 2;
	}
}