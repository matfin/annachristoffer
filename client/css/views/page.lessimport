body.page {
	.wrapper {
		height: 100%;
		.container {
			.align-items(flex-start);
			.content {
				> section {
					padding: @gridColumnWidth * 4 0;
					.display(flex);
				}
			}
			.content-mobile {
				> section {
					padding: @gridColumnWidth * 3 0;
				}
			}
		}
	}
}

.content.mobile {
	section {
		display: block;
	}
}