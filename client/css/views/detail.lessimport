body.detail {
	.wrapper {
		height: 100%;
		.container {
			.align-items(flex-start);
			header {
				top: @gridColumnWidth * 4;
				@media @mobile {
					top: 0;
				}
			}
			.content {
				section {
					padding: @gridColumnWidth * 4 0;
					@media @mobile {
						padding-top: 0px;
						padding-bottom: 64px;
					}
				}
			}
		}
	}
}