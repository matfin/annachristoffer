body.detail {
	.wrapper {
		height: 100%;
		.container {
			.align-items(flex-start);
			.content {
				section {
					padding: @gridColumnWidth * 4 0;

					@media @tablet {
						padding: @gridColumnWidth * 2 0;
					}
				}
			}
			.content-mobile {
				section {
					padding: @gridColumnWidth * 3 0;
				}
			}
		}
	}
}