body.detail {
	height: auto;
	.wrapper {
		background-image: url('/images/backgrounds/detail_ratio_1.jpg');
		.container {
			.align-items(flex-start);
			header {
				top: @gridColumnWidth * 3;
			}
			.content {
				section {
					padding-top: @gridColumnWidth * 4;
					@media @mobile {
						padding-top: 0px;
						padding-bottom: 64px;
					}
				}
			}
		}
	}
}