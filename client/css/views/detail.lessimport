body.detail {
	height: auto;
	.wrapper {
		background-image: url('/images/backgrounds/detail_ratio_1.jpg');
		.container {
			.align-items(flex-start);
			header {
				top: @gridColumnWidth * 3;
				@media @mobile {
					top: 0;
				}
			}
			.content {
				section {
					padding: @gridColumnWidth * 4 0;
					@media @mobile {
						padding-top: 0px;
						padding-bottom: 64px;
					}
				}
			}
		}
	}
}