.projectCard {
	z-index: 2;
	position: absolute;
	top: 0%;
	right: 0%;
	padding: @gridColumnWidth / 2;
	background-color: @background;
	border: 1px solid @colourBlack;
	width: @gridColumnWidth * 14;
	min-height: @gridColumnWidth * 8;

	.transition-property(top, right, opacity);
	.transition-duration(@transitionDuration);
	.opacity(0.5);

	time, h2 {
		font-weight: 500;
		letter-spacing: 1px;
	}
	p {
		.resetMarginPadding;
		margin-top: @gridColumnWidth;
		font-style: italic;
		font-size: @standardFont - 2;
		letter-spacing: 1px; 
	}

	&.highlighted {
		.opacity(1.0);
	}

	&:hover {
		background-color: @colourWhite;
		.opacity(1.0);
	}
}

@media @mobile {
	.projectCard {
		position: relative;
		display: block;
		width: 100%;
		.box-sizing(border-box);
		border-left: 0;
		border-right: 0;
	}
}