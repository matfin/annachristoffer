.mediaContainer {
	position: relative;
	.flex(2);
	margin: @gridColumnWidth;
	.user-select(none);
	overflow: hidden;

	> img {
		position: relative;
		top: 0;
		left: 0;
		width: 100%;
		height: auto;
		z-index: @primaryLayer;
	}	
}

.mobileMediaContainer {
	display: block;
	width: 100%;

	img {
		width: 100%;
		height: auto;
	}

	.iosSlider {
		height: @gridColumnWidth * 15;
	}
}