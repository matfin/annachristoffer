.mediaContainer {
	position: relative;
	.flex(2);
	margin: @gridColumnWidth;
	.user-select(none);
	overflow: hidden;

	> img {
		position: relative;
		top: 0;
		left: 0;
		width: 100%;
		height: auto;
		z-index: @primaryLayer;
	}	
}

.mobileMediaContainer {
	
	position: relative;
	.flex(1);
	.user-select(none);
	overflow: hidden;

	> img {
		width: 100%;
		height: auto;
	}
}